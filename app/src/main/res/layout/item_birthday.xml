<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_birthdayItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/checkBox_birthdayItem_giftBought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gift Bought?"
        app:layout_constraintBottom_toBottomOf="@+id/textView_birthdayItem_daysUntil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_birthdayItem_name" />

    <TextView
        android:id="@+id/textView_birthdayItem_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/checkBox_birthdayItem_giftBought"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Some Name" />

    <TextView
        android:id="@+id/textView_birthdayItem_daysUntil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkBox_birthdayItem_giftBought"
        app:layout_constraintStart_toStartOf="@+id/textView_birthdayItem_name"
        tools:text="3 days until" />

</androidx.constraintlayout.widget.ConstraintLayout>